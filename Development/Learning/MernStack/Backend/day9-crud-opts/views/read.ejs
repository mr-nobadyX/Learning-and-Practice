<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheet/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full h-full bg-zinc-900">

        <div class="nav mb-10">
            <a href="/" class="text-blue-500">Back to home</a>
        </div>

        <h1 class="bg-blue-500 mb-10">All users</h1>

        <% if (users.length === 0) { %>
            <p class="text-center text-zinc-500">No users found. Add a new user to get started!</p>
        <% } else { %>
            <div class="users flex gap-3 flex-wrap">
                <% users.forEach((user) => { %>
                    <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                        <div class="w-full h-52 rounded-lg bg-zinc-700 overflow-hidden">
                            <img class="w-full h-full object-cover" src="<%= user.image %>" alt="">
                        </div>
                        <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
                        <h5 class="text-zinc-500"><%= user.email %></h5>
            
                        <div class="flex gap-3 mt-10">
                            <a href="/edit/<%= user._id %>" class="text-zinc-300">Edit user</a>
                            <a class="text-red-500" href="/delete/<%= user._id %>">Delete</a>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>

    </div>
</body>
</html>
